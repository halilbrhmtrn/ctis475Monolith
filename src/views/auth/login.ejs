<%- include('../common/header') %>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui image header">
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <form method="post" class="ui large form">
      <div class="ui stacked secondary  segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="username" placeholder="Username">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" name="password" placeholder="Password">
          </div>
        </div>
        <input type="submit" class="ui fluid large black submit button" value="Login">
      </div>

      <div class="ui error message"></div>

    </form>

    <div class="ui message">
      New to us? <a href="/auth/register">Register</a>
    </div>

    <div class="ui error message" role="alert" id="errorMessage" style="display:none;">
      Invalid credentials!
    </div>
  </div>
</div>
<script>
  window.addEventListener('load', function () {
    if (window.location.search.indexOf('error') > -1) {
      window.document.getElementById('errorMessage').style.display = 'block';
    }
  });
</script>
<%- include('../common/footer') %>